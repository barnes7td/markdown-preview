<%= form_for @post do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', id: 'body-edit-area', placeholder: "Enter post body" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label "Preview" %>
        <div id="body-preview"></div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.submit "Save", class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
